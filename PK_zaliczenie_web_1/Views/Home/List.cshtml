@model IEnumerable<Units>

@{
    ViewBag.Title = "Units List";
}




<div class="card-deck">
    @foreach (var unit in Model)
    {
        var photoPath = "~/images/" + (unit.PhotoPath ?? "defense.png");
        <div class="card m-3" style="min-width: 20rem; max-width:30.5%">
            <div class="card-header">
                <h3>@unit.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath"
                 asp-append-version="true" />
            <div class="card-footer text-center">


                <a asp-controller="home" asp-action="details"
                   asp-route-id="@unit.Id"
                   class="btn btn-primary m-1">View</a>

                <a asp-action="edit" asp-controller="home"
                   asp-route-id="@unit.Id"
                  class="btn btn-primary m-1">Edit</a>

                <a asp-action="delete" asp-controller="home"
                   asp-route-id="@unit.Id"
                   class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
